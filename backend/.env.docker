# Docker Environment Variables
# Copy this file to .env.docker and customize as needed

# Database Configuration
DATABASE_URL="mysql://nestjs_user:nestjs_password@mysql:3306/education_platform"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-docker"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production-docker"
JWT_REFRESH_EXPIRES_IN="7d"

# App Configuration
PORT=3000
NODE_ENV="production"

# MySQL Configuration
MYSQL_ROOT_PASSWORD="rootpassword"
MYSQL_DATABASE="education_platform"
MYSQL_USER="nestjs_user"
MYSQL_PASSWORD="nestjs_password"
